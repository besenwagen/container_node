{
  "private": true,
  "type": "module",
  "eslintConfig": {
    "extends": "@eric.bednarz.dev",
    "rules": {
      "camelcase": "off",
      "max-len": [
        "error",
        {
          "code": 72,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreUrls": true
        }
      ],
      "max-statements": [
        "error",
        7
      ]
    },
    "ignorePatterns": [
      "**/example/**/*.js"
    ]
  },
  "dependencies": {
    "@eric.bednarz.dev/eslint-config": "^2.1.0",
    "eslint": "^7.2.0",
    "finalhandler": "^1.1.2",
    "glob": "^7.1.6",
    "jsdom": "^16.2.2",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^1.31.0",
    "rollup-plugin-prettier": "^0.6.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-url-resolve": "^0.1.1",
    "serve-static": "^1.14.1",
    "stylelint": "^13.2.1"
  }
}
